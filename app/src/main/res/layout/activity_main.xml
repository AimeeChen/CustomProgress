<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aimee.progress.main.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <com.aimee.progress.view.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:progress="50"
            app:progress_text_color="@color/colorAccent"
            app:progress_unreach_color="@color/colorPrimary"/>

        <com.aimee.progress.view.RoundProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:progress="50"
            app:progress_radius="50dp"
            app:progress_reach_height="5dp"
            app:progress_text_color="@color/colorAccent"
            app:progress_unreach_color="@color/colorPrimary"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
